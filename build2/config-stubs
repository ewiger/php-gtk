#!/bin/sh 
#
# $Id$

dir=$1; shift

if test "$dir" == *ext; then
    echo "sinclude([$dir/gtk+/config.m4])"
fi

for stub in $dir/*; do
    if [[ -f $stub/config.m4 
            && "$stub" != *skeleton
                && "$stub" != *gtk\+ ]]; then
        echo "sinclude([$stub/config.m4])"
    fi
done
