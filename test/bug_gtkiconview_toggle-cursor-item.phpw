} else {
    //prepare the test
    require_once(dirname(__FILE__) . '/bugconfig.php');
    $handle = popen(PHP_EXECUTABLE . ' ' . __FILE__ . ' run 2>&1', 'r');
    $lines = '';
    while (!feof($handle)) {
        $lines .= fgets($handle, 4096);
    }
    pclose($handle);

    if (strlen($lines) == 0) {
        echo 'ok' . "\r\n";
    } else if (strpos($lines, 'PHP Warning') !== false) {
