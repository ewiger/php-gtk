%% {{{ GtkRecentManager

%%
override gtk_recent_manager_get_items
PHP_METHOD
{
    GtkRecentInfo *info;
    GList *items;
    guint count, i;
    zval *php_info = NULL;

    NOT_STATIC_METHOD();

    items = gtk_recent_manager_get_items(GTK_RECENT_MANAGER(PHPG_GOBJECT(this_ptr)));
    count = g_list_length(items);
    array_init(return_value);
    for (i = 0; i < count; i++) {
        info = g_list_nth_data(items, i);
        phpg_gboxed_new(&php_info, GTK_TYPE_RECENT_INFO, &info, TRUE, TRUE TSRMLS_CC);
        add_next_index_zval(return_value, php_info);
    }
    g_list_foreach(items, (GFunc) gtk_recent_info_unref, NULL);
    g_list_free(items);
}

